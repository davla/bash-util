#!/bin/bash

RESOLUTION=$(xrandr | grep '*' | awk '{ print $1 }')

if [[ $RESOLUTION == '3200x1800' ]]; then
	# Upscaling

	CURSOR_SIZE=48
	DPI=180
	ICON_SIZES='gtk-menu=40,40:gtk-button=45,45:gtk-dialog=48,48:gtk-small-toolbar=45,45:gtk-large-toolbar=45,45'
	PANEL_SIZE=48
	SYSTRAY_ICON_SIZE=43
	THUNAR_ICON_SIZE='THUNAR_ICON_SIZE_LARGE'
	THUNAR_WINDOW_HEIGHT=965
	THUNAR_WINDOW_WIDTH=1270
	THUNAR_ZOOM='THUNAR_ZOOM_LEVEL_LARGER'
	WINDOW_MANAGER_THEME='StoneageThick'
else
	# Downscaling

	CURSOR_SIZE=24
	DPI=90
	ICON_SIZES="''"
	PANEL_SIZE=24
	SYSTRAY_ICON_SIZE=22
	THUNAR_ICON_SIZE='THUNAR_ICON_SIZE_SMALL'
	THUNAR_WINDOW_HEIGHT=520
	THUNAR_WINDOW_WIDTH=700
	THUNAR_ZOOM='THUNAR_ZOOM_LEVEL_NORMAL'
	WINDOW_MANAGER_THEME='Stoneage'
fi

SYSTRAY_PROP=$(xfconf-query -c xfce4-panel -p /plugins -l -v | grep systray | awk '{ print $1 }')/size-max

xfconf-query -n -c thunar -p /last-icon-view-zoom-level -t string -s $THUNAR_ZOOM
xfconf-query -n -c thunar -p /last-window-height -t int -s $THUNAR_WINDOW_HEIGHT
xfconf-query -n -c thunar -p /last-window-width -t int -s $THUNAR_WINDOW_WIDTH
xfconf-query -n -c thunar -p /shortcuts-icon-size -t string -s $THUNAR_ICON_SIZE
xfconf-query -n -c thunar -p /tree-icon-size -t string -s $THUNAR_ICON_SIZE
xfconf-query -n -c xfwm4 -p /general/theme -t string -s $WINDOW_MANAGER_THEME
xfconf-query -n -c xfce4-panel -p /panels/panel-1/size -t int -s $PANEL_SIZE
xfconf-query -n -c xfce4-panel -p $SYSTRAY_PROP -t int -s $SYSTRAY_ICON_SIZE
xfconf-query -n -c xsettings -p /Gtk/CursorThemeSize -t int -s $CURSOR_SIZE
xfconf-query -n -c xsettings -p /Gtk/IconSizes -t string -s $ICON_SIZES
xfconf-query -n -c xsettings -p /Xfce/LastCustomDPI -t int -s $DPI
xfconf-query -n -c xsettings -p /Xft/DPI -t int -s $DPI
